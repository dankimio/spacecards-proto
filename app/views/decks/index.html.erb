<h2 class="font-normal text-3xl">
  Decks
  <%= link_to 'New deck', new_deck_path, class: 'text-base ml-1' %>
</h2>

<% Deck.all.each do |deck| %>
  <div class="mb-4 py-4 px-5 bg-grey-lightest rounded lg:w-2/3 xl:w-1/2">
    <div class="text-lg mb-2">
      <%= link_to deck.name, deck %>
    </div>
    <span class="text-sm text-grey"><%= deck.cards_count %> <%= 'card'.pluralize(deck.cards_count) %></span>
  </div>
<% end %>
