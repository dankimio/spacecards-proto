<!DOCTYPE html>
<html>
  <head>
    <title>Flashcards</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <%= stylesheet_pack_tag 'application' %>
    <%= javascript_pack_tag 'application' %>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>

  <body>
    <div class="stripe h-2">
    </div>

    <div class="container flex flex-col sm:flex-row sm:justify-between sm:items-center py-6">
      <div class="text-4xl mb-3 sm:mb-0">
        <%= link_to root_path do %>
          <%= image_tag 'logo.png', class: 'h-12' %>
        <% end %>
      </div>
      <div class="">
        <% if user_signed_in? %>
          <%= link_to 'Upgrade', '#', class: 'btn btn-primary' %>
          <%= link_to 'Settings', edit_user_registration_path, class: 'ml-4' %>
          <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'ml-4' %>
        <% else %>
          <%= link_to 'Log in', new_user_session_path, class: 'ml-4' %>
        <% end %>
      </div>
    </div>

    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>" role="alert">
          <span class="block sm:inline"><%= value %></span>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
