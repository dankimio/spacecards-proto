<div class="flex flex-col md:flex-row py-5 px-6 bg-grey-lightest rounded mb-4">
  <div class="mb-4 md:mb-0 md:w-1/3 lg:w-2/5">
    <%= card.front %>
  </div>

  <div class="mb-4 md:mb-0 md:w-1/3 lg:w-2/5">
    <%= card.back %>
  </div>

  <div class="md:w-1/3 lg:w-1/5 md:text-right">
    <%= link_to '#', class: 'mr-5 text-grey-dark hover:text-indigo-dark' do %>
      <i class="material-icons mr-1" style="font-size:.925rem">edit</i>
      Edit
    <% end %>

    <%= link_to card_path(card), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-grey-dark hover:text-red-dark' do %>
      <i class="material-icons mr-1" style="font-size:.925rem">delete</i>
      Delete
    <% end %>
  </div>
</div>
