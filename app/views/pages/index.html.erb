<% content_for :meta do %>
  <meta name="description" content="Remember everything with flashcards and spaced repetition.">
<% end %>

<div class="container">
  <%= image_tag 'home.svg', class: 'block mx-auto mb-8 md:mb-10 max-w-md w-full' %>

  <div class="flex flex-col items-center text-center mb-6">
