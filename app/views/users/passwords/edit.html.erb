<%= content_for :title, 'Change password' %>

<div class="my-6 md:my-12">
  <h1 class="heading-1">Change your password</h1>

  <div class="max-w-sm mx-auto">
    <%= form_for resource, as: resource_name,
                 url: password_path(resource_name), html: { method: :put } do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, 'New password' %>

        <%= f.password_field :password,
                             autofocus: true, autocomplete: 'new-password', required: true,
                             class: 'form-control' %>
        <% if @minimum_password_length %>
          <small><%= @minimum_password_length %> characters minimum</small>
        <% end %>
      </div>

      <div class="actions my-6">
        <%= f.submit 'Change my password', class: 'btn btn-primary btn-lg w-full' %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
